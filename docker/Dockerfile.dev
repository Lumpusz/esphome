FROM esphome/esphome-base-amd64:2.6.0

COPY . .

RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        python3-wheel \
        net-tools \
        build-essential \
        libssl-dev \
        libffi-dev \
        python3-dev \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /workspaces
ENV SHELL /bin/bash
